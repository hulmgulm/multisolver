{
  "files": [
        "src/app/main.ts",
        "src/app/app.module.ts",
        "src/app/components/*.ts",
        "src/app/directives/*.ts",
        "src/app/shared/helper/*.ts",
        "src/app/shared/modules/*.ts",
        "src/app/shared/modules/crypto/*.ts",
        "src/app/shared/modules/crypto/data-containers/*.ts",
        "src/app/shared/modules/crypto/modules/*.ts",
        "src/app/translate/*.ts"
  ],
  "compilerOptions": {
    "target": "es5",
    "removeComments": true,
    //"outDir": "./app",
    "outFile": "./app/app.js",
    "module": "system",
    "moduleResolution": "node",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noResolve": false
  },
  "exclude": [
    "*gulpfile.ts",
    "node_modules",
    "build",
    "typings/*",
     "typings/globals",
    ".vscode"
  ]
}
